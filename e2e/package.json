{
  "name": "zutron-e2e",
  "description": "Zutron E2E Test Suite",
  "type": "module",
  "private": "true",
  "scripts": {
    "clean": "pnpm dlx shx rm -rf ./js ./node_modules pnpm-lock.yaml ./wdio-logs* ./out",
    "logs": "pnpm dlx shx cat ./wdio-logs*/*.log",
    "test": "turbo run test:e2e:reducers test:e2e:separate-handlers test:e2e:store-handlers",
    "test:e2e:reducers": "cross-env EXAMPLE_DIR=example-reducers pnpm run exec",
    "test:e2e:separate-handlers": "cross-env EXAMPLE_DIR=example-separate-handlers pnpm run exec",
    "test:e2e:store-handlers": "cross-env EXAMPLE_DIR=example-store-handlers pnpm run exec",
    "exec": "xvfb-maybe wdio run ./wdio.conf.ts"
  },
  "dependencies": {
    "@testing-library/webdriverio": "^3.2.1",
    "@wdio/cli": "^9.1.3",
    "@wdio/electron-utils": "^7.1.0",
    "@wdio/globals": "^9.1.3",
    "@wdio/local-runner": "^9.1.3",
    "@wdio/mocha-framework": "^9.1.3",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.1",
    "wdio-electron-service": "^7.1.0",
    "webdriverio": "^9.1.3",
    "xvfb-maybe": "^0.2.1"
  },
  "devDependencies": {
    "@testing-library/user-event": "^14.5.2",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.7.5",
    "electron": "^32.2.0",
    "read-package-up": "^11.0.0",
    "typescript": "^5.6.3"
  }
}
